#include <bits/stdc++.h>
using namespace std;
void rearrange(int arr[],int n)
    {
        for(int i =0;i<n-1;i++)
        {
            if(arr[i]>arr[i+1])
            {
                swap(arr[i],arr[i+1]);
            }
            
        }
        for(int i =0;i<n;i++)
        {
            cout<<arr[i]<<endl;
        }
        
    }
    
int main()
{
    int arr[]={1,2,2,1};
    int n = sizeof(arr)/sizeof(int);
    
    rearrange(arr,n);
    
    return 0;
}
